# API Configuration
PORT=9622
API_HOST=0.0.0.0
API_PORT=9621

# OpenAI/Azure Configuration
OPENAI_BASE_URL=https://your-azure-endpoint.openai.azure.com
OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=your-embedding-deployment
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=3072

# Qdrant Configuration
QDRANT_URL=your-qdrant-url
QDRANT_API_KEY=your-qdrant-api-key
VECTOR_BACKEND=qdrant
QDRANT_COLLECTION_NAME=news_articles

# LLM Configuration
MODEL=claude-3-7-sonnet-20250219
MAX_TOKENS=4000
TEMPERATURE=0.7
LLM_TIMEOUT=120

# Performance Settings
MAX_SUMMARY_ARTICLES=15
MAX_ARTICLE_CONTENT_CHARS=1500
SUMMARY_CACHE_SIZE=100
SUMMARY_CACHE_TTL=1800

# Langfuse Configuration
LANGFUSE_HOST=https://us.cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=your-public-key-here
LANGFUSE_SECRET_KEY=your-secret-key-here
PROJECT_NAME=newsragnarok

# Redis Configuration (Optional)
REDIS_HOST=your-redis-host
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-password
REDIS_USE_SSL=true
REDIS_DB=0

# Application Insights (Optional)
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

MAX_ARTICLE_CONTENT_CHARS=1500# Chunking settings for processing all articles
MAX_CHUNK_SIZE=50
DEFAULT_ARTICLE_LIMIT=100

# Cache settings for comprehensive summaries  
SUMMARY_CACHE_SIZE=200 
SUMMARY_CACHE_TTL=1300  # 1 hour
